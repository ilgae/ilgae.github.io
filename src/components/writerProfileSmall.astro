---
export interface Props extends astroHTML.JSX.AnchorHTMLAttributes {}

const { writer } = Astro.props;
---

<a href={`/user/${writer}`}>
    <img
        class="writer_profile_small-avatar"
        src={`/images/avatar/${writer}.jpg`}
        alt={`${writer}`}
    />
    <span>{writer}</span>
</a>
<style>
    img {
        margin-left: 5px;
        width: 25px;
        height: 25px;

        aspect-ratio: 1/1;
        border-radius: 50%;
    }
    a {
        display: flex;
        max-width: fit-content;

        color: #666666;
        font-weight: 500;
        text-decoration: none;
        border-radius: 10px;
        margin-right: 10px;
    }
    a:hover {
        background-color: #dddddd;
    }
    a.active {
        font-weight: bolder;
        text-decoration: underline;
    }
    span {
        padding: 0 10px;
    }
</style>
